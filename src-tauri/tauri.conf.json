{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:5050",
        "distDir": "../dist"
    },
    "package": {
        "productName": "tauri-demo-app",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "windows": [
            {
                "title": "tauri-demo-app",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.demo.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}